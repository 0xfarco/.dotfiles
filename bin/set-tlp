#!/bin/bash

# Must be run as root
if [[ $EUID -ne 0 ]]; then
  echo "✖ This script must be run with sudo or as root."
  echo "   Example: sudo bash configure_tlp.sh"
  exit 1
fi

set -e

TLP_CONF="/etc/tlp.conf"
BACKUP="/etc/tlp.conf.backup-$(date +%Y%m%d-%H%M%S)"

echo "[*] Backing up $TLP_CONF to $BACKUP"
cp "$TLP_CONF" "$BACKUP"

echo "[*] Applying TLP configuration..."

# Settings to apply
declare -A settings=(
  ["CPU_SCALING_GOVERNOR_ON_AC"]="powersave"
  ["CPU_SCALING_GOVERNOR_ON_BAT"]="powersave"
  ["CPU_ENERGY_PERF_POLICY_ON_AC"]="balance_power"
  ["CPU_ENERGY_PERF_POLICY_ON_BAT"]="balance_power"
  ["PLATFORM_PROFILE_ON_AC"]="balanced"
  ["PLATFORM_PROFILE_ON_BAT"]="low-power"
  ["WIFI_PWR_ON_AC"]="on"
  ["WIFI_PWR_ON_BAT"]="on"
  ["RUNTIME_PM_ON_AC"]="auto"
  ["RUNTIME_PM_ON_BAT"]="auto"
)

# Apply settings
for key in "${!settings[@]}"; do
  value="${settings[$key]}"

  if grep -qE "^#?\s*${key}=" "$TLP_CONF"; then
    # Update existing line
    sed -i "s|^#\?\s*${key}=.*|${key}=${value}|" "$TLP_CONF"
  else
    # Append new entry
    echo "${key}=${value}" >> "$TLP_CONF"
  fi
done

echo "[*] Reloading TLP service..."
systemctl restart tlp 2>/dev/null || tlp start 2>/dev/null || true

echo "[✔] Done! TLP configuration updated successfully."

