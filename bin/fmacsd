#!/usr/bin/env bash

DAEMON=fmacs

if emacsclient -s "$DAEMON" -e '(emacs-pid)' >/dev/null 2>&1; then
    notify-send "Emacs" "Emacs daemon '$DAEMON' is already running."
    exit 0
fi

/usr/bin/emacs --daemon="$DAEMON" \
  && notify-send "Emacs" "Emacs daemon '$DAEMON' started" \
  || notify-send "Emacs" "Failed to start Emacs daemon '$DAEMON'"

